<p id="notice"><% notice %></p>

<h1>Sucursales</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Sucursal.where(usuario_id: session[:user_id]).each do |sucursal| %>
      <tr>
        <td><%= sucursal.nombre %></td>
        <td><%= link_to 'Mostrar detalles', sucursal %></td>
        <td><%= link_to 'Editar', edit_sucursal_path(sucursal) %></td>
        <td><%= link_to 'Borrar sucursal', sucursal, method: :delete, data: { confirm: 'Confirme que desea borrar la sucursal.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar sucursal', new_sucursal_path %>
