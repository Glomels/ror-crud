<p id="notice"><% notice %></p>

<h1>Empleados</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Rfc</th>
      <th>Puesto</th>
      <th>Usuario</th>
      <th>Sucursal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Empleado.where(usuario_id: session[:user_id]).each do |empleado| %>
      <tr>
        <td><%= empleado.nombre %></td>
        <td><%= empleado.apellido %></td>
        <td><%= empleado.rfc %></td>
        <td><%= empleado.puesto %></td>
        <td><%= empleado.usuario_id %></td>
        <td><%= empleado.sucursal_id %></td>
        <td><%= link_to 'Editar', edit_empleado_path(empleado) %></td>
        <td><%= link_to 'Eliminar empleado', empleado, method: :delete, data: { confirm: 'Confirme que desea eliminar al empleado.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar empleado', new_empleado_path %>
