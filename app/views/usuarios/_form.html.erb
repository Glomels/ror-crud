<%= form_with(model: usuario, :html=>{:id=>"user_form", :remote=>"true"}) do |form| %>
  <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= usuario.errors.count %> errores encontrados :( </h2>

      <ul>
      <% usuario.errors.full_messages.each do |message| %>
        <li><%= t message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, id: :usuario_nombre %>
  </div>

  <div class="field">
    <%= form.label :apellido %>
    <%= form.text_field :apellido, id: :apellido_nombre %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :usuario_email %>
  </div>

  <div class="field">
    <%= form.label :rfc %>
    <%= form.text_field :rfc, id: :usuario_rfc %>
  </div>

  <div class="field">
    <%= form.label :empresa %>
    <%= form.text_field :empresa, id: :usuario_empresa %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :usuario_password %>
  </div>

 <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :usuario_password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit "Aplicar" %>
  </div>
<% end %>
